{
  "compilerOptions": {
      "target": "es2016",
      "module": "esnext", // Change to 'esnext' for Vite
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", // Optional, if you want to output compiled files somewhere
  },
  "include": [
      "src/**/*.ts" // Include all TypeScript files in the src directory
  ]
}
